# Window navigation

alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Window movement

alt - y : yabai -m window --warp west
alt - u : yabai -m window --warp south
alt - i : yabai -m window --warp north
alt - o : yabai -m window --warp east

# Window resizing

shift + alt - h : yabai -m window --resize left:-180:0; \
                  yabai -m window --resize right:-180:0
shift + alt - j : yabai -m window --resize top:0:180; \
                  yabai -m window --resize bottom:0:180
shift + alt - k : yabai -m window --resize top:0:-180; \
                  yabai -m window --resize bottom:0:-180
shift + alt - l : yabai -m window --resize left:180:0; \
                  yabai -m window --resize right:180:0

shift + alt - e : yabai -m space --balance

# Window stacking

shift + alt - y : yabai -m window --stack west
shift + alt - u : yabai -m window --stack south
shift + alt - i : yabai -m window --stack north
shift + alt - o : yabai -m window --stack east

alt - n : yabai -m window --focus stack.next
alt - p : yabai -m window --focus stack.prev

# Spaces

shift + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space 6; yabai -m space --focus 6

# Toggles 

alt - t : yabai -m window --toggle float
alt - z : yabai -m window --toggle zoom-fullscreen
alt - g : yabai -m space --toggle padding; \
                  yabai -m space --toggle gap

# Commands

shift + alt - r : brew services restart yabai
